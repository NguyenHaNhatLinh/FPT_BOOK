@@model List<Order>

<h2>My Orders</h2>

@if (Model.Count == 0)
{
    <p>You have no orders yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>

                <th>Order Time</th>
                <th>Total</th>
                <th>State</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderTime</td>
                    <td>@order.Total$</td>
                    <td>@order.State</td>
                    <td>
                        <a asp-action="Details" asp-controller="Orders" asp-route-id="@order.Id">Details</a> |
                        @* <a asp-action="Edit" asp-controller="Orders" asp-route-id="@order.Id">Edit</a> | *@
                        <a asp-action="Delete" asp-controller="Orders" asp-route-id="@order.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}